@using WebMatrix.Data

@{
    var db = Database.Open("AmazonOrders");
    var sql = "select * from items where itemName like concat(@0, '%')";
    var data = db.Query(sql, Request.Form["searchText"]); 
}
<h2 class="text-center bg-light py-1 mt-2">All Products</h2>

<form method="post" action="/Home/Index" class="row">
    <div class="col-3"><input type="text" name="searchText" class="form-control" placeholder="Search Products" value="@Request.Form["searchText"]"/></div>
    <div class="col-2"><button type="submit" class="btn btn-primary">Search</button></div>
</form>

@if (data.Count()>0)
{
<div class="row justify-content-center">
    @foreach (var row in data)
    {
        <div class="card col-3 m-1">
            <img src="@row.itemImage" class="card-img-top" alt="@row.itemName image">
            <div class="card-body">
                <h5 class="card-title">@row.itemname;</h5>
                <p class="card-text">@row.itemDescription</p>
                <p class="font-italic">@row.itemCost.ToString("C")</p>
                <a href="/Home/Details?id=@row.itemID" class="btn btn-secondary">View Detail</a>
            </div>
        </div>



    }
</div>
}

else
{
        <h2 class="text-danger text-center">Oops! No matching products returned...</h2>
}


